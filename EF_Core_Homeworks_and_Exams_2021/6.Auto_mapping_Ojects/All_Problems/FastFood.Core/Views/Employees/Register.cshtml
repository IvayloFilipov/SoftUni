@model IList<FastFood.Core.ViewModels.Employees.RegisterEmployeeViewModel>

@{
    ViewData["Title"] = "Register Employee";
}
<h1 class="text-center">Register Employee</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Employees" asp-action="Register" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Name..." name="name">
    </div>
    <div class="form-group">
        <label for="age">Age</label>
        <input type="number" step="1" min="18" class="form-control" id="age" placeholder="Age..." name="age">
    </div>
    <div class="form-group">
        <label for="position">Position Name</label>
        <select id="position" class="form-control" name="PositionId">
            @foreach (var position in Model)
            {
                //change @position.PositionId to @position.PositionName and added new property PositionName into RegisterEmployeeViewModel
                // also added new map into FastFoodProfile (from Position to RegisterEmployeeViewModel) -> .ForMember(x => x.PositionName, y => y.MapFrom(s => s.Name))
                <option value="@position.PositionId">@position.PositionName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address" placeholder="Address..." name="address" />
    </div>
    <hr class="bg-secondary half-width" />

    @*here added align="center" and <a class="btn btn-primary">Back</a> into the <div>*@
    <div align="center" class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn ">Register</button>

        @*must also add into the <a> tag asp-controller="Employees" asp-action="All"*@
        <a class="btn btn-primary" asp-controller="Employees" asp-action="All">Back</a>
    </div>
</form>