{{> header}}
<!-- Details  -->
<section id="viewdestinationDetails">
    <div class="destination-area">
        <div class="destination-area-left">
            <img src="{{currDest.imgUrl}}"
                alt="{{currDest.destination}}">
        </div>
        <div class="destination-area-right">
            <h3>{{currDest.destination}}</h3>
            <div>{{currDest.city}}</div>
            <div class="data-and-time">
                {{currDest.departureDate}}
                <a href="/loadEditCurrDestForm/{{currDest.id}}" class="edit-destination-detail"></a>
            </div>
            <div>
                {{currDest.duration}} days
            </div>
        </div>
    </div>
</section>
{{> footer}}