{{> header}}
<!-- Edit  -->
<section id="viewEditDestination">
    <h2>Edit existing destination</h2>
    <form id="formAddDestination" action="/sendEditedDest/{{currDest.id}}" method="POST">
        <label for="destination">Destination name:</label>
        <input type="text" id="destination" name="destination" value="{{currDest.destination}}">

        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{currDest.city}}">

        <label for="duration">Duration:</label>
        <input type="number" id="duration" name="duration" value="{{currDest.duration}}">

        <label for="departureDate">Departure Date:</label>
        <input type="date" id="departureDate" name="departureDate" value="{{currDest.departureDate}}">

        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imgUrl" value="{{currDest.imgUrl}}">

        <input type="submit" class="create" value="Edit">
    </form>
</section>
{{> footer}}